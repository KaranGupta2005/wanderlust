
<% if (success && success.length > 0) { %>
  <div class="row">
    <div class="alert alert-success alert-dismissible fade show my-3 fw-bold col-4 offset-2" role="alert">
      <%= success[0] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% } %>

<% if (error && error.length > 0) { %>
  <div class="row">
    <div class="alert alert-danger alert-dismissible fade show my-3 fw-bold col-4 offset-2" role="alert">
      <%= error[0] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% } %>





