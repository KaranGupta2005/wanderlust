<% layout('layouts/boilerplate') %>

<body>
  <h2 class="mt-3 mb-3 text-center display-4 fw-bold">Edit the Listing</h2>
  <div class="row">
    <div class="col-8 offset-2">
      <form
        method="POST"
        action="/listings/<%= listing._id %>?_method=PUT"
        enctype="multipart/form-data"
        class="needs-validation"
        novalidate
      >
        <div class="mb-3">
          <label for="title" class="form-label fw-bold">Title</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="listing[title]"
            value="<%= listing.title %>"
            required
          />
        </div>

        <div class="mb-3">
          <label for="desc" class="form-label fw-bold">Description</label>
          <textarea
            class="form-control"
            id="desc"
            name="listing[description]"
            required
          ><%= listing.description %></textarea>
        </div>

        <div class="mb-3">
          <p class="display-6 fw-bold" style="font-size: 1rem;">Listing: </p>
          <img src="<%= originalImage %>" class="card-img-top rounded" alt="listing_image" style="height: 20rem;">
        </div>

        <div class="mb-3">
          <label for="image" class="form-label fw-bold">Change Listing Image</label>
          <input
            type="file"
            class="form-control"
            id="image"
            name="listing[image]"
          />
        </div>

        <div class="mb-3">
          <label for="price" class="form-label fw-bold">Price</label>
          <input
            type="text"
            class="form-control"
            id="price"
            name="listing[price]"
            value="<%= listing.price %>"
            required
          />
        </div>

        <div class="row">
          <div class="mb-3 col-md-6">
            <label for="location" class="form-label fw-bold">Location</label>
            <input
              type="text"
              class="form-control"
              id="location"
              name="listing[location]"
              value="<%= listing.location %>"
              required
            />
          </div>

          <div class="mb-3 col-md-6">
            <label for="country" class="form-label fw-bold">Country</label>
            <input
              type="text"
              class="form-control"
              id="country"
              name="listing[country]"
              value="<%= listing.country %>"
              required
            />
          </div>
        </div>

        <button type="submit" class="btn btn-danger mb-3">Edit</button>
      </form>
    </div>
  </div>
</body>

