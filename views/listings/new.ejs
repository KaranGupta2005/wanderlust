<% layout('layouts/boilerplate.ejs') %>

<body>
    
    <h2 class="mt-3 mb-3 text-center display-4 fw-bold">Create a New Listing</h2>
    <div class="row offset-2">
        <div class="col-8">
        <form method="POST" action="/listings" class="needs-validation" enctype="multipart/form-data" novalidate >
        <div class="mb-3">
        <label for="title" class="form-label fw-bold">Title</label>
        <input name="listing[title]" id="title" class="form-control" type="text" placeholder="Enter a suitable title" required/>
        <div class="valid-feedback">Title looks good !</div>
        </div>
        
        <div class="mb-3">
            <label for="desc" class="form-label fw-bold">Description</label>
            <textarea name="listing[description]" id="desc" class="form-control" required></textarea>
            <div class="invalid-feedback">A short description should be provided.</div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label fw-bold">Upload Listing Image</label>
            <input name="listing[image]" id="image" class="form-control" type="file" placeholder="Enter Image URL" required />
        </div>
        
        <div class="mb-3">
            <label for="price" class="form-label fw-bold">Price</label>
            <input name="listing[price]" id="price" class="form-control" type="text" placeholder="1800 / night" required/>
            <div class="invalid-feedback">Enter a Price</div>
        </div>

        <div class="row">
            <div class="mb-3 col-md-8">
            <label for="location" class="form-label fw-bold">Location</label>
            <input name="listing[location]" id="location" class="form-control" type="text" placeholder="New Delhi , Delhi" required/>
            <div class="invalid-feedback">Field can't be empty</div>
        </div>
        
        <div class="mb-3 col-md-4">
            <label for="country" class="form-label fw-bold">Country</label>
            <input name="listing[country]" id="country" class="form-control" type="text" placeholder="India" required/>
            <div class="invalid-feedback">Field can't be empty</div>
            </div>
        </div>

        
        <button class="add-btn btn btn-danger mb-3">Add</button>
    </form>
        </div>
        
    </div>
</body>
